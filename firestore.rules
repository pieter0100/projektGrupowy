rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user is accessing their own data
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{uid} {
      // Allow read/write only to the owner
      allow read: if isOwner(uid);
      allow create: if isOwner(uid);
      allow update: if isOwner(uid);
      allow delete: if false; // Prevent deletion
      
      // Subcollection: levelProgress
      match /levelProgress/{levelId} {
        allow read: if isOwner(uid);
        allow create, update: if isOwner(uid);
        allow delete: if false;
      }
    }
    
    // User Results collection - immutable after creation, only owner can write
    match /user_results/{resultId} {
      // Allow read only to the owner (result.uid must match auth.uid)
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      
      // Allow create only if uid matches authenticated user
      allow create: if isAuthenticated() 
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.keys().hasAll(['uid', 'sessionId', 'timestamp']);
      
      // Prevent updates and deletes (immutable)
      allow update, delete: if false;
    }
    
    // Game Progress collection - only owner can read/write
    match /game_progress/{progressId} {
      // Allow read only to the owner
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      
      // Allow create only if uid matches authenticated user
      allow create: if isAuthenticated() 
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.keys().hasAll(['uid', 'sessionId']);
      
      // Allow update only by owner
      allow update: if isAuthenticated() && resource.data.uid == request.auth.uid;
      
      // Prevent deletion
      allow delete: if false;
    }
    
    // Levels collection - read-only for all authenticated users
    match /levels/{levelId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write (handled by Cloud Functions)
    }
    
    // Leaderboards - read-only for all authenticated users
    match /leaderboards/{leaderboardId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can update leaderboards
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
