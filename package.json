{
  "name": "projektgrupowy-tests",
  "version": "1.0.0",
  "description": "Firestore security rules tests",  "scripts": {
    "emulator:start": "npx firebase emulators:start --only firestore --project projektgrupowy-ba8f2",
    "test:rules": "jest test/firestore.rules.test.js",
    "test:rules:verbose": "jest test/firestore.rules.test.js --verbose",
    "validate:privacy": "node scripts/validate-privacy-implementation.js",
    "backup:rules": "firebase firestore:rules > firestore.rules",
    "backup:indexes": "firebase firestore:indexes > firestore.indexes.json",
    "backup:all": "npm run backup:rules && npm run backup:indexes",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "firebase deploy --only firestore:rules,firestore:indexes,functions"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.4",
    "jest": "^30.2.0"
  },
  "jest": {
    "testTimeout": 30000,
    "verbose": true
  }
}
